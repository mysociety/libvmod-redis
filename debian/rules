#!/usr/bin/make -f
export DH_VERBOSE=1

override_dh_gencontrol:
	if [ -n "$$DEBIAN_OVERRIDE_BINARY_VERSION" ]; then \
		dh_gencontrol -- -v$$DEBIAN_OVERRIDE_BINARY_VERSION; \
	else \
		dh_gencontrol ; \
	fi

override_dh_auto_configure:
	dh_auto_configure -- --disable-tls --libdir=/usr/lib/x86_64-linux-gnu;

%:
	dh $@
